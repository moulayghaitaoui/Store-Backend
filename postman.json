    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"owner@example.com\",\n  \"password\": \"123456\",\n  \"role\": \"OWNER\"\n}"
        },
        "url": { "raw": "http://localhost:3001/auth/register", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["auth", "register"] }
